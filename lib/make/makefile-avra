name = ""

atmega_path := $(shell dirname $(shell dirname $(dir $(realpath $(lastword $(MAKEFILE_LIST))))))

asm = $(name).asm
hex = tmp/$(name)/$(name).hex
eep = tmp/$(name)/$(name).eep.hex
list = tmp/$(name)/$(name).list
map = tmp/$(name)/$(name).map

all: $(hex)

$(hex): $(asm)
	@mkdir tmp/$(name) -p
	avra -I $(atmega_path)/lib/avra -l $(list) -m $(map) -o $(hex) -e $(eep) $(asm)
	@mv $(name).obj tmp/$(name)/$(name).obj

upload: $(hex)
	make -f $(atmega_path)/lib/make/upload name=$(name)

clean:
	rm -rf tmp

dump: $(hex)
	@avr-objdump -m avr -D $(hex)

list: $(hex)
	@cat $(list) | pager
	
